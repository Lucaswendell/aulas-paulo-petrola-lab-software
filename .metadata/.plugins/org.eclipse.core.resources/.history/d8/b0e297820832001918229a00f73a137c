package teste_tomcat;

import javax.servlet.*;
import java.io.*;

public class SimplesServlet extends javax.servlet.GenericServlet {
	//inicializando a servlet e suas configurações
	public void init(Servlet config) throws ServletException{
		super.init(config);
	}
	//será execultado a cada requisição do usuario
	//request traz dados que podem ter sidos enviados pelo usuario
	//response devolve os dados processados
	public void service(ServletRequest request, ServletResponse response) throws IOException {
		//obtem o stream de resposta
		PrintWriter out = new PrintWriter();
		//gerando a resposta
		out.println("Bem vindo aos javaServlets!");
		//fecha o stream
		System.out.println("Hello world");
		out.close();
	}
}